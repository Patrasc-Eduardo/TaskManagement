			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Parse the JSON response\r",
									"let jsonData = pm.response.json();\r",
									"\r",
									"// Extract the token\r",
									"let token = jsonData.access_token;\r",
									"\r",
									"// Set it as an environment variable\r",
									"pm.environment.set(\"access_token\", token);\r",
									"\r",
									"// (Optional) if you have a refresh token:\r",
									"pm.environment.set(\"refresh_token\", jsonData.refresh_token);\r",
									"\r",
									"// You can log a message to Postman console\r",
									"console.log(\"Access token set to:\", token);\r",
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n    \"username\": \"edi\",\r\n    \"password\": \"password\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:{{auth_service_port}}/v1/auth/login",
